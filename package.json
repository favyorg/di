{
  "name": "@lather/core",
  "version": "1.0.16",
  "license": "MIT",
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "build": "yarn run build:common && yarn run build:types",
    "build:common": "esbuild src/*.ts --outdir=build --sourcemap --minify",
    "build:types": "tsc --emitDeclarationOnly --declaration --project tsconfig.json --outDir ./build",
    "watch": "esbuild src/index.ts --bundle --watch --sourcemap=external --outfile=build/index.js",
    "dev": "concurrently \"npm:watch\" \"nodemon build/index.js\"",
    "debug": "concurrently \"yarn watch\" \"nodemon --inspect=0.0.0.0 build/index.js\"",
    "test": "jest --coverage",
    "test:watch": "jest --watchAll --coverage",
    "docs": "typedoc src/index.ts --excludePrivate --excludeProtected --excludeInternal",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "release": "./bin/publish.sh",
    "example_pages:watch": "esbuild src/examples/pages/index.ts --bundle --watch --sourcemap=external --outfile=dist/pages_example.js",
    "example:pages": "concurrently \"yarn example_pages:watch\" \"nodemon dist/pages_example.js\"",
    "example_module:watch": "esbuild src/examples/module/index.ts --bundle --platform=node --watch --sourcemap=external --outfile=dist/module_example.js",
    "example:module": "concurrently \"yarn example_module:watch\" \"nodemon dist/module_example.js\"",
    "example_hello:watch": "esbuild src/examples/hello/index.ts --bundle --platform=node --watch --sourcemap=external --outfile=dist/hello_example.js",
    "example:hello": "concurrently \"yarn example_hello:watch\" \"nodemon dist/hello_example.js\""
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": [
        "esbuild-jest",
        {
          "sourcemap": true,
          "loaders": {
            ".test.ts": "ts"
          }
        }
      ]
    },
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/tests/"
    ]
  },
  "devDependencies": {
    "@types/jest": "^26.0.24",
    "@types/node": "^15.12.5",
    "concurrently": "^7.0.0",
    "coveralls": "^3.1.1",
    "esbuild": "^0.14.21",
    "jest": "^27.0.6",
    "nodemon": "^2.0.15",
    "ts-jest": "^27.1.3",
    "typedoc": "^0.21.4",
    "typescript": "^4.5.2",
    "zod": "^3.8.2"
  },
  "dependencies": {}
}
